doctype 5
html(lang='en')
    head
        title <%= appName %>
        
        meta(name='description', content='')
        meta(name='keywords',    content='')
        meta(name='author',      content='')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no')
        meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(charset='UTF-8')

        //if lt IE 9
            script(src='js/lib/html5shiv.js')
        script(src='bower_components/jquery/jquery.min.js')
        <% if(installModernizr) { %>script(src='bower_components/modernizr/modernizr.js')<% } %>
        <% if(installBootstrap) { %>script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')<% } %>
        script(src='static/scripts/app.js')
        
        <% if(installBootstrap) { %>link(rel='stylesheet', type='text/css', href='bower_components/bootstrap/dist/css/bootstrap.min.css')<% } %>
        link(rel='stylesheet', type='text/css', href='static/styles/stylesheet.css')

    body
        article#page
            header
                h1 <%= appName %>

            section#body
                p welcome

            footer
                #copyright &copy; <%= (new Date).getFullYear() %>